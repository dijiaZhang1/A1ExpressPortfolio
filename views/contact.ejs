         <div class="input-field col s12">
           <input required id="email" type="email" class="validate" name="email">
           <label for="email">Email</label>
         </div>
       </div>
       <div class="row">
         <div class="input-field col s12">
           <input required id="phone" type="text" class="validate" name="phone">
           <label for="phone">Your Phone</label>
         </div>
       </div>
       <div class="row">
         <div class="input-field col s12">
           <textarea required id="message" class="materialize-textarea" name="message"></textarea>
           <label for="message">Message</label>
         </div>
       </div>
       <input type="submit" class="waves-effect waves-light btn" value="Submit"/>
     </form>
   </div>
