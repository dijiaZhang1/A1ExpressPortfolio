<%- include ../partials/header.ejs %>
<style type="text/css">
    body {
      color: black;
      background-color:rgb(178, 238, 144) }
    </style>
  
<!-- Content for the Add_Edit page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <input type="hidden"
                        name="id"
                        value="<%= item._id %>"
                    >
                    <label for="nameTextField">Contact Name</label>
                    <input type="text" class="form-control"
                        id="nameTextField"
                        placeholder="Enter the Contact Name"
                        name="name" 
                        value="<%= item.name %>"
                        required>
                </div>
                <br />
                <div class="form-group">
                    <label for="NumberTextField">Contact Number</label>
                    <input type="text" class="form-control"
                    id="NumberTextField"
                    placeholder="Enter a number"
                    name="number" 
                    value="<%= item.number %>"
                    required>
                </div>
                <br />
                <div class="form-group">
                    <label for="emailTextField">Email Address</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter a email"
                    name="email" 
                    value="<%= item.email %>"
                    >
                </div>
                <br />
                

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> 
                    Submit
                </button>
                
                <a href="/contacts/list" class="btn btn-warning">
                    <i class="fas fa-undo"></i> 
                    Cancel
                </a>

            </form>
        </div>

    </div>
</div>

<%- include ../partials/footer.ejs %>